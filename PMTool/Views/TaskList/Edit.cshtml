@model PMTool.Models.TaskList

<style>
    label {
        font-size: 125%;
    }
</style>
@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <hr />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-5">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TaskListId" />
                    <div class="form-group">
                        <label asp-for="TaskListName" class="control-label"></label>
                        <input asp-for="TaskListName" class="form-control" />
                        <span asp-validation-for="TaskListName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectId" class="control-label"></label>
                        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                        <span asp-validation-for="ProjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskListOpen" class="control-label"></label>
                        <input asp-for="TaskListOpen" class="form-control" />
                        <span asp-validation-for="TaskListOpen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
