@model PMTool.Models.TaskList

@{
    ViewData["Title"] = "Create Task List";
}
<h2 class="display text-center text-uppercase font-weight-bold text-primary">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskListName" class="control-label"></label>
                <input asp-for="TaskListName" class="form-control" />
                <span asp-validation-for="TaskListName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
            </div>
            @*<div class="form-group">
                    <label asp-for="TaskListOpen" class="control-label"></label>
                    <input asp-for="TaskListOpen" class="form-control" />
                    <span asp-validation-for="TaskListOpen" class="text-danger"></span>
                </div>*@
            <label asp-for="TaskListOpen" class="control-label"></label>
            <select asp-for="TaskListOpen" class="form-control">
                <option value="1">Open</option>
                <option value="2">Closed</option>
            </select>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
