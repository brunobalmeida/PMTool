@model IEnumerable<PMTool.Models.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h2>@ViewData["Title"]</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLocked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLocal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEmployee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLocked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLocal)
            </td>
            <td></td>
        </tr>
}
    </tbody>
</table>
