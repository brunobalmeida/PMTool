@model PMTool.Models.Province
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = $"Create a province for {Context.Session.GetString("countryName")}";
}

<style>

    label {
        font-size: 125%;
    }
</style>





<div class="row">

    <div class="col-md-3"></div>

    <div class="col-md-6">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <hr />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-5">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                   
                    <input type="hidden" name="countryId" value="@Context.Session.GetString("countryId")" />
                    
                    <div class="form-group">
                        <label asp-for="ProvinceName" class="control-label"></label>
                        <input asp-for="ProvinceName" class="form-control" />
                        <span asp-validation-for="ProvinceName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProvinceCode" class="control-label"></label>
                        <input asp-for="ProvinceCode" class="form-control" />
                        <span asp-validation-for="ProvinceCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
