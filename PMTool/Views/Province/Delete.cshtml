@model PMTool.Models.Province
@{
    ViewData["Title"] = "Delete Province / State";
}

<style>
    dt, dd {
        font-size: 145%;
    }

    input {
        width: 50%;
    }
</style>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h2 class="text-center text-danger">Delete</h2>
        <h3 class="text-danger text-center">Are you sure you want to delete this?</h3>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ProvinceName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ProvinceName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ProvinceCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ProvinceCode)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Country.CountryName)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="ProvinceId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>