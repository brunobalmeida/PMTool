@model IEnumerable<PMTool.Models.Province>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = $"Provinces / States for {Context.Session.GetString("countryName")}";
}

<style>

    td, th, p {
        font-size: 125%;
    }
</style>

<br />

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <h2 class="text-center">@ViewData["Title"]</h2>
        <p class="text-center">Select a province to edit, or insert a new province to the database.</p><br />
        <p>
            <a asp-action="Create" class="btn btn-light d-lg-block">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProvinceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProvinceCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProvinceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProvinceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country.CountryName)
                    </td>
                    <td class="text-right">
                        <a asp-action="Edit" asp-route-id="@item.ProvinceId" class="btn btn-outline-success">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProvinceId" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
        <a asp-action="Index" asp-controller="Country" class="btn btn-outline-primary">Back to Countries</a>
    </div>
    <div class="col-md-3"></div>
</div>