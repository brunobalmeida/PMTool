@model IEnumerable<PMTool.Models.Project>
@{
    ViewData["Title"] = "Projects";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<div class="container" style="background-color:#E8F7F7">
    <ol>
        @foreach (var item in Model)
        {
            <li>
                <a asp-controller="tasklist" asp-route-id="@item.ProjectId">
                    <span class="rectangle">
                        <p><b><u>Project @Html.DisplayFor(modelItem => item.ProjectName)</u></b></p>
                        <p>Client website: @Html.DisplayFor(modelItem => item.Client.WebAddress)</p>
                        <p>Project status:</p>
                            @if (item.ProjectOpen == 1)
                            {
                                <p><b>OPEN</b></p>
                        }
                            else
                            {
                                <p><b>ARQUIVED</b></p>
                                    }
                        <p>End date: @Html.DisplayFor(modelItem => item.EndDate)</p>
                        @*<div class="col-md-4"></div>
                        <div class="col-md-4">@Html.DisplayFor(modelItem => item.ProjectName)<br /></div>
                        <div class="col-md-4"></div>
                        <div>@Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate)</div>*@
                    </span>
                </a>
            </li>

        }
    </ol>

</div>
<br />
<p class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add project</a>
</p>