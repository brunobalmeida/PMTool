@model IEnumerable<PMTool.Models.Project>
@{
    ViewData["Title"] = "Projects";
}
<h2 class="display text-center">@ViewData["Title"]</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="jumbotron">

            </div>
        </div>
        <div class="col-md-8">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-4">
                        
                            <a asp-action="Create" class="btn btn-secondary">Add project</a>
                        
                    </div>
                </div>
                <br />
                <ol class="row">
                    @foreach (var item in Model)
                    {
                        <li class="col-md-4">
                            <a asp-controller="tasklist" asp-route-projectId="@item.ProjectId" asp-route-projectName="@item.ProjectName">
                                <div class="card text-white bg-primary mb-3" style="max-width:400px;">
                                    <div class="card-header">Project @Html.DisplayFor(modelItem => item.ProjectName)</div>
                                    <div class="card-body">
                                        <div class="card-text">Client website: @Html.DisplayFor(modelItem => item.Client.WebAddress)</div>
                                        <div class="card-text">
                                            Project status:@if (item.ProjectOpen == 1)
                                            {
                                                <b>OPEN</b>
                                            }
                                            else
                                            {
                                                <b>ARQUIVED</b>
                                            }
                                        </div>
                                        <div class="card-text">End date: @Html.DisplayFor(modelItem => item.EndDate)</div>
                                    </div>
                                    @*<div class="col-md-4"></div>
                                        <div class="col-md-4">@Html.DisplayFor(modelItem => item.ProjectName)<br /></div>
                                        <div class="col-md-4"></div>
                                        <div>@Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate)</div>*@
                                </div>
                            </a>
                        </li>

                    }
                </ol>
            </div>
        </div>
    </div>
</div>