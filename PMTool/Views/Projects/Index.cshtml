@model IEnumerable<PMTool.Models.Project>
@{
    ViewData["Title"] = "Projects";
}
<h2 class="display text-center">@ViewData["Title"]</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="jumbotron">

            </div>
        </div>
        <div class="col-md-8">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-4">
                        <a asp-action="Create" class="btn btn-secondary">Add project</a>
                    </div>
                </div>
                <br />
                <ol class="row">
                    @foreach (var item in Model)
                    {
                        <li class="col-md-4">
                            
                                <div class="card text-white bg-primary mb-3" style="max-width:400px;">
                                    <div class="card-header text-left">Project @Html.DisplayFor(modelItem => item.ProjectName)
                                        <a asp-action="edit" asp-controller="projects" asp-route-id="@item.ProjectId" class="glyphicon glyphicon-wrench bg-info"></a>
                                        <a asp-action="delete" asp-controller="projects" asp-route-id="@item.ProjectId" class="glyphicon glyphicon-trash bg-info"></a>
                                        </div>

                                   
                                        <div class="card-body">
                                            <a class="text-white bg-primary" asp-controller="tasklist" asp-route-projectId="@item.ProjectId" asp-route-projectName="@item.ProjectName">
                                                <div class="card-text">Client website: @Html.DisplayFor(modelItem => item.Client.WebAddress)</div>
                                                <div class="card-text">
                                                    Project status:@if (item.ProjectOpen == 1)
                                                    {
                                                        <b>OPEN</b>
                                                    }
                                                    else
                                                    {
                                                        <b>ARQUIVED</b>
                                                    }
                                                </div>

                                                <div class="card-text">End date: @Html.DisplayFor(modelItem => item.EndDate)</div>
                                            </a> 
                                                </div>
                                    
                                </div>
                            
                        </li>
                    }
                </ol>
            </div>
        </div>
    </div>
</div>