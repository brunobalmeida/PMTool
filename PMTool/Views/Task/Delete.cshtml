@model PMTool.Models.Task

@{
    ViewData["Title"] = "Delete";
}
<style>
    dt, dd {
        font-size: 145%;
    }

    input {
        width: 50%;
    }
</style>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h2 class="text-center text-danger font-weight-bold">Delete</h2>
        <h3 class="text-danger text-center font-weight-bold">Are you sure you want to delete this?</h3>

        <hr />
        <dl class="text-center table-bordered rounded">
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.TaskName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaskName)
            </dd>
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.TaskWeight)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaskWeight)
            </dd>
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.TaskDescription)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaskDescription)
            </dd>
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.ExpectedDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ExpectedDate)
            </dd>
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.TaskDuration)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaskDuration)
            </dd>
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.TaskActiveFlag)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaskActiveFlag)
            </dd>
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.Employee)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Employee.EmployeeId)
            </dd>
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.TaskList)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaskList.TaskListId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="TaskId" />
            <input type="submit" value="Delete" class="btn btn-default" />
            <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
