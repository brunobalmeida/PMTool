@model PMTool.Models.Task
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Create a new task";
}
<br />
<h4 class="text-center">Task</h4>
<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.ListPerson"></select>
            </div>
            <input type="hidden" asp-for="TaskListId" value ="@Context.Session.GetInt32("listId")"/>
            @*<div class="form-group">
                <label asp-for="TaskListId" class="control-label"></label>
                <select asp-for="TaskListId" class ="form-control" asp-items="ViewBag.TaskListId"></select>
            </div>*@
            <div class="form-group">
                <label asp-for="TaskName" class="control-label">Task Name</label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskWeight" class="control-label">Task Weight (0-100)</label>
                <input asp-for="TaskWeight" class="form-control" />
                <span asp-validation-for="TaskWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label"></label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedDate" class="control-label"></label>
                <input asp-for="ExpectedDate" class="form-control" />
                <span asp-validation-for="ExpectedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDuration" class="control-label">Task Duration (days)</label>
                <input asp-for="TaskDuration" class="form-control" />
                <span asp-validation-for="TaskDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskActiveFlag" class="control-label"></label>
                <select asp-for="TaskActiveFlag" class="form-control">
                    <option value="1">Open</option>
                    <option value="2">Closed</option>
                </select>

                <span asp-validation-for="TaskActiveFlag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </div>
    </div>
    <div class="col-md-3"></div>
 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
