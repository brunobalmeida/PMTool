@model IEnumerable<PMTool.Models.Employee>
@{
    ViewData["Title"] = "Employee List";
}

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <hr />
            <p>
                <a asp-action="Create" class="btn btn-default center-block">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Employee Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Address
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Person.FirstName) @Html.DisplayFor(modelItem => item.Person.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Person.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Person.Address)
                            </td>
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a>*@         
                                <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-default">HR Details</a> |
                                <a asp-action="Details" asp-controller="Person" asp-route-firstName="@item.Person.FirstName" asp-route-lastName="@item.Person.LastName"
                                   asp-route-id="@item.PersonId" class="btn btn-primary">Employee Details</a>
                                @*<a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
   </div>
</div>

      
