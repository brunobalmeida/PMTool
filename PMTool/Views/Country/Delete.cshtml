@model PMTool.Models.Country

@{
    ViewData["Title"] = "Delete Country";
}

<style>
    dt, dd {
        font-size: 145%;
    }
    input {
        width:50%;
    }
</style>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h2 class="text-center text-danger font-weight-bold">Delete</h2>
        <h3 class="text-danger text-center font-weight-bold">Are you sure you want to delete this?</h3>
        
            <hr />
            <dl class="text-center table-bordered rounded">
                <dt class="table-bordered table-light rounded">
                    @Html.DisplayNameFor(model => model.CountryName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CountryName)
                </dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="CountryId" />
                <input type="submit" value="Delete" class="btn btn-outline-danger" /> <br /><br />
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </form>
        
    </div>
    <div class="col-md-4"></div>
</div>