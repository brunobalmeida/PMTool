@model IEnumerable<PMTool.Models.Country>

@{
    ViewData["Title"] = "Country Index";
}

<br />

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <p class="text-center">Select a country to edit, or insert a new country to the database.</p><br />
            <p >
                <a asp-action="Create" class="btn btn-light d-lg-block">Create New</a>
            </p>
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>
                            @Html.DisplayNameFor(model => model.CountryName)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.CountryId" class="btn btn-outline-success">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CountryId" class="btn btn-outline-danger">Delete</a> |
                    <a asp-controller="Province" asp-route-countryId="@item.CountryId"
                       asp-route-countryName="@item.CountryName" class="btn btn-outline-dark">Add Province</a>
                </td>
            </tr>
}
                </tbody>
            </table>
            <a asp-action="Index" asp-controller="Projects" class="btn btn-outline-primary">Back to Projects</a>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>