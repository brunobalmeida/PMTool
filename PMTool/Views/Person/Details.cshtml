@model PMTool.Models.Person

@{
    ViewData["Title"] = $" Details of {ViewBag.firstName} {ViewBag.lastName}";
}
<br />

<div class="row">

    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h2 class="text-center">@ViewData["Title"]</h2>

            <hr />
            <div>
                <dl class="text-center table-bordered rounded">

                    <dt class="table-bordered table-light rounded">
                        Name
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.MiddleName) @Html.DisplayFor(model => model.LastName)
                    </dd>
                    <dt class="table-bordered table-light rounded">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address) @Html.DisplayFor(model => model.Address2)
                    </dd>
                    <dt class="table-bordered table-light rounded">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="table-bordered table-light rounded">
                        @Html.DisplayNameFor(model => model.PostalCode)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PostalCode)
                    </dd>
                    <dt class="table-bordered table-light rounded">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt class="table-bordered table-light rounded">
                        @Html.DisplayNameFor(model => model.PersonImage)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PersonImage)
                    </dd>
                    <dt class="table-bordered table-light rounded">
                        @Html.DisplayNameFor(model => model.Province)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Province.ProvinceCode)
                    </dd>
                </dl>
            </div>   
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model.PersonId" class="btn btn-outline-success">Edit</a>
                <a asp-controller="Person" asp-action="Delete" asp-route-id="@Model.PersonId" class="btn btn-outline-danger">Delete</a>
            </div>
    </div>

    <div class="col-md-4"></div>

    
</div>