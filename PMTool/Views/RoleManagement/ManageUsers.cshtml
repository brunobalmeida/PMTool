@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}
<br />

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <h2 class="text-center">@ViewData["Title"]</h2><br />

            <div class="text-center">
                <form asp-action="AddUserToRole" class="form-control">
                    <h3>Users not in Role</h3>
                    <select name="AddUser" asp-items="ViewBag.addUser" class="form-control"></select><br /><br />
                    <input type="submit" value="Add User to Role" class="btn btn-light" />
                </form>
            </div>

            <br />
            <div class="form-control">
                <h3 class="text-center">Users in Role</h3>
                <table class="table">
                    <tr>
                        <th>User email</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Email</td>
                            <td>
                                <a asp-action="RemoveFromRole" asp-route-userName="@item.UserName" class="btn btn-outline-danger text-right">Remove from role</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="col-md-3"></div>
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>