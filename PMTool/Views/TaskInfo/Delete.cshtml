@model PMTool.Models.TaskInfo

@{
    ViewData["Title"] = "Delete";
}
<style>
    dt, dd {
        font-size: 145%;
    }

    input {
        width: 50%;
    }
</style>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h2 class="text-center text-danger font-weight-bold">Delete</h2>
        <h3 class="text-danger text-center font-weight-bold">Are you sure you want to delete this?</h3>

        <hr />
        <dl class="text-center table-bordered rounded">
            <dt class="table-bordered table-light rounded">
                @Html.DisplayNameFor(model => model.TaskNote)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaskNote)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Task)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Task.TaskDescription)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="TaskInfoId" />
            <input type="submit" value="Delete" class="btn btn-default" />
            
        </form>
    </div>
    <div class="col-md-4"></div>
    <div class="text-center">
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>
